            //- Profile
            .col-md-12.col-lg-6
              div(id="tile2" class="tile" onmouseover="hover(2)" onmouseout="out(2)")
                  .tile-header
                    .profile
                      img(src="img/profile/vintagedaughter.jpg" alt="")
                      p.username vintagedaughter
                    .time 59m ago
                  .tile-photo
                    img(src="img/results/london-2.jpg" alt="")
                  .tile-footer
                    .likes 23 likes
                    .description Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore
            //- Profile
            .col-md-12.col-lg-6 
